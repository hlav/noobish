extends ../layout

append body  
  p
    if notice
      p=notice
    if error
      p=error
      
  div.form-box-container
    .alternative_action
      h1 SIGN IN
  form(action="/users/login" method="POST")
    include form.jade


  div.form-box-container
    div.alternative_action
      a(href="/auth/signup")  Don't have an account? Sign up
  a(class="btn btn-block btn-social btn-twitter" href='/auth/facebook')
    span(class="fa fa-twitter") Sign in with Facebook
